@model IEnumerable<Dance.Eticaret.Model.Entity.Basket>


<table class="table">
    <tr>
        <th>
          Eğitmen
        </th>
        
        <th>
            Dans Türü
        </th>
        <th>
            Adet
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DanceLesson.Trainer)
        </td>
        <td>
            @Html.DisplayFor(modelItem=>item.DanceLesson.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
      
        <td>
            @Html.ActionLink("Sil", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

<a href="/Siparisver" class="btn btn-primary"><i class="fas fa-dollar-sign"></i> Satın Al</a>
